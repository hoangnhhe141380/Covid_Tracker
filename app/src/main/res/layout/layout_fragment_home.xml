<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/i_banner"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="SPREAD FACTS, NOT FEAR"
            android:textColor="#13287e"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="One way to avoid coronavirus is simply by washing your hands."
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.833" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="452dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:gravity="left"
            android:text="Global data"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_date_updated"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/tv_date_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:gravity="left"
            android:text="Date"
            android:textColor="#808080"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_cases"
            app:layout_constraintEnd_toStartOf="@+id/button_covid_data_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916" />

        <TextView
            android:id="@+id/tv_cases"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/i_cases"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="Cases"
            android:textSize="19dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_deaths"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <TextView
            android:id="@+id/tv_deaths"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/i_deaths"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="Deaths"
            android:textSize="19dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_recovered"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <TextView
            android:id="@+id/tv_recovered"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="84dp"
            android:background="@drawable/i_recovered"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="Recovered"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <Button
            android:id="@+id/button_covid_data_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            app:layout_constraintBottom_toTopOf="@+id/tv_cases"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.963"
            android:fontFamily="@font/nunito_sans_semibold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>